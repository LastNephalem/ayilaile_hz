<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/white">

    <include layout="@layout/common_title" />

    <ScrollView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_marginTop="90.0px"
        android:background="@color/white"
        android:fadingEdge="none"
        android:scrollbars="none">

        <LinearLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="490.0px"
                android:layout_height="538.0px"
                android:layout_marginTop="45.0px"
                android:alpha="0.7"
                android:background="#fff9b72d"
                android:gravity="center_horizontal"
                android:orientation="vertical">

                <View
                    android:layout_width="243.0px"
                    android:layout_height="242.0px"
                    android:layout_marginTop="115.0px"
                    android:background="@drawable/act_csordersuc_orderstate_png" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="40.0px"
                    android:text="恭喜您预约成功，请等待电话联系～"
                    android:textColor="@color/white"
                    android:textSize="40.0px" />
            </LinearLayout>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="55.0px"
                android:text="您也可以选择立即支付"
                android:textColor="#ff727171"
                android:textSize="29.0px" />

            <TextView
                android:id="@+id/act_csordersuc_paynow_tv"
                android:layout_width="364.0px"
                android:layout_height="100.0px"
                android:layout_gravity="center"
                android:layout_marginTop="15.0px"
                android:background="#fff39700"
                android:gravity="center"
                android:text="立即支付"
                android:textColor="@color/white"
                android:textSize="34.0px" />

            <View
                android:layout_width="fill_parent"
                android:layout_height="140.0px" />
        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="110.0px"
        android:layout_alignParentBottom="true"
        android:background="@color/white"
        android:gravity="center"
        android:orientation="vertical">

        <TextView
            android:id="@+id/act_csordersuc_gotit_tv"
            android:layout_width="496.0px"
            android:layout_height="67.0px"
            android:background="@drawable/item_serveitem_order"
            android:gravity="center"
            android:text="知道了"
            android:textColor="@color/white"
            android:textSize="24.0px"
            android:visibility="visible" />
    </LinearLayout>
</RelativeLayout>