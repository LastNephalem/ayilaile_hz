<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="#99000000"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="90.0px"
        android:background="@color/white">

        <LinearLayout
            android:id="@+id/common_title_llayout_left"
            android:layout_width="180.0px"
            android:layout_height="fill_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:visibility="visible">

            <TextView
                android:id="@+id/common_title_left_txt_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="35.0px"
                android:textColor="@color/white"
                android:textSize="30.0px"
                android:visibility="gone" />

            <View
                android:id="@+id/common_title_left_img_pull"
                android:layout_width="21.0px"
                android:layout_height="12.0px"
                android:layout_marginLeft="10.0px"
                android:background="@drawable/common_title_img_pull"
                android:visibility="gone" />

            <View
                android:id="@id/common_title_left_img_back"
                android:layout_width="20.0px"
                android:layout_height="36.0px"
                android:layout_marginLeft="35.0px"
                android:background="@drawable/item_finish_log"
                android:visibility="gone" />

            <View
                android:id="@+id/common_title_left_img_back2"
                android:layout_width="50.0px"
                android:layout_height="50.0px"
                android:layout_marginLeft="35.0px"
                android:background="@drawable/image_agent_information_back"
                android:visibility="gone" />
        </LinearLayout>

        <RelativeLayout
            android:id="@+id/common_title_rlayout_center"
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:layout_centerInParent="true"
            android:visibility="visible">

            <TextView
                android:id="@+id/common_title_center_txt_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:textColor="@color/white"
                android:textSize="36.0px"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/common_title_center_img_logo"
                android:layout_width="170.0px"
                android:layout_height="68.0px"
                android:layout_centerInParent="true"
                android:background="@drawable/common_title_img_logo"
                android:visibility="gone" />
        </RelativeLayout>

        <RelativeLayout
            android:id="@+id/common_title_rlayout_right"
            android:layout_width="120.0px"
            android:layout_height="fill_parent"
            android:layout_alignParentRight="true"
            android:visibility="visible">

            <TextView
                android:id="@+id/common_title_right_txt_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:layout_marginRight="35.0px"
                android:textColor="@color/white"
                android:textSize="30.0px"
                android:visibility="gone" />

            <ImageView
                android:id="@id/common_title_right_img"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="35.0px"
                android:background="@drawable/common_title_btn_right_img_share"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/common_title_right_phone"
                android:layout_width="58.0px"
                android:layout_height="58.0px"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginRight="35.0px"
                android:background="@drawable/item_aunt_come_phone_log"
                android:visibility="gone" />
        </RelativeLayout>

        <TextView
            android:layout_width="fill_parent"
            android:layout_height="1.0px"
            android:layout_alignParentBottom="true"
            android:background="#ffc8c8c8" />
    </RelativeLayout>
</LinearLayout>